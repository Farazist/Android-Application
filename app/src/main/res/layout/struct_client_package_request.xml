<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    app:cardBackgroundColor="#f9f9f9"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/persian"
                android:gravity="center"
                android:text="@string/reject"
                android:textColor="#a62626"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSystemName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/persian"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="شرکت سبز فرازیست فرامرزی فرازیست فرامرزی"
                    android:textColor="#444"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/persian"
                    android:gravity="center|right|center_vertical"
                    android:text="@string/system"
                    android:textColor="#111"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/fontawesome"
                    android:gravity="center|center_vertical"
                    android:text="\uf509"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/persian"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="#444"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/persian"
                    android:gravity="center|right|center_vertical"
                    android:text="@string/date"
                    android:textColor="#111"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/fontawesome"
                    android:gravity="center|center_vertical"
                    android:text="\uf073"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/persian"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="#444"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/persian"
                    android:gravity="center|right|center_vertical"
                    android:text="@string/time"
                    android:textColor="#111"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/fontawesome"
                    android:gravity="center|center_vertical"
                    android:text="\uf017"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeliveryID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/persian"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="#444"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/persian"
                    android:gravity="center|right|center_vertical"
                    android:text="@string/deliveryID"
                    android:textColor="#111"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/fontawesome"
                    android:gravity="center|center_vertical"
                    android:text="\uf737"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
